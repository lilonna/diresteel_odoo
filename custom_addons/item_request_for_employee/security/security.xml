<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <record id="group_department_head" model="res.groups">
      <field name="name">Department Head (Requests)</field>
      <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="rule_department_head_requests" model="ir.rule">
      <field name="name">Department Head: view own department requests</field>
      <field name="model_id" ref="department_requests.model_department_item_request"/>
      <field name="groups" eval="[(4, ref('department_requests.group_department_head'))]"/>
      <field name="domain_force">[('department_id.manager_id.user_id','=', user.id)]</field>
    </record>

  </data>
</odoo>
