<odoo>
    <record id="view_employee_asset_card_tree" model="ir.ui.view">
        <field name="name">employee.asset.card.tree</field>
        <field name="model">employee.asset.card</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_asset_card_form" model="ir.ui.view">
        <field name="name">employee.asset.card.form</field>
        <field name="model">employee.asset.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <field name="name" readonly="1"/>
                        <field name="employee_id" readonly="1"/>
                    </group>

                    <group string="Issued Items">
                        <field name="line_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="quantity"/>                                
                                <field name="returnable"/>
                                <field name="returned"/>
                                <field name="issue_date"/>
                                <field name="return_date"/>
                                <field name="condition_on_return"/>
                                <field name="request_id"/>

                                <button
                                    name="action_open_return_wizard"
                                    type="object"
                                    string="Return"
                                    modifiers='{"invisible": [["returned", "=", true]]}'
                                />
                            </tree>
                        </field>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_employee_asset_card" model="ir.actions.act_window">
        <field name="name">Employee Asset Cards</field>
        <field name="res_model">employee.asset.card</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_employee_asset_cards"
              name="Employee Asset Cards"
              parent="stock.menu_stock_root"
              action="action_employee_asset_card"
              sequence="60"/>
</odoo>
