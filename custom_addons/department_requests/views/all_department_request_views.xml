<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_all_department_item_request_tree" model="ir.ui.view">
        <field name="name">all.department.item.request.tree</field>
        <field name="model">department.item.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="state"/>
                <field name="create_uid" string="Requested By"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="action_all_department_item_requests" model="ir.actions.act_window">
        <field name="name">All Department Requests</field>
        <field name="res_model">department.item.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_all_department_item_request_tree"/>
        <field name="views" eval="[
            (ref('department_requests.view_all_department_item_request_tree'), 'tree'),
            (ref('department_requests.view_department_item_request_form'), 'form')
        ]"/>    
    </record>

</odoo>
