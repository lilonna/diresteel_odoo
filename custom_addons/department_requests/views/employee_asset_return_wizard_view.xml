<odoo>
    <record id="view_employee_asset_return_wizard_form" model="ir.ui.view">
        <field name="name">employee.asset.return.wizard.form</field>
        <field name="model">employee.asset.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Return Asset" create="false" edit="false">
                <group>
                    <field name="asset_line_id" readonly="1"/>
                    <field name="condition"/>
                    <field name="notes"/>
                </group>

                <footer>
                    <button
                        name="action_confirm_return"
                        type="object"
                        string="Confirm Return"
                        class="btn-primary"
                    />
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
