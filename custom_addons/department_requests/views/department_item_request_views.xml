<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_department_item_request_tree" model="ir.ui.view">
        <field name="name">department.item.request.tree</field>
        <field name="model">department.item.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" modifiers="{'readonly': [['state', '!=', 'draft']]}"/>
                <field name="employee_id" modifiers="{'readonly': [['state', '!=', 'draft']]}"/>
                <field name="department_id"/>
                <field name="state"/>
                <field name="create_uid" string="Requested By"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_department_item_request_form" model="ir.ui.view">
        <field name="name">department.item.request.form</field>
        <field name="model">department.item.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" modifiers="{'readonly': [['state', '!=', 'draft']]}"/>
                        <field name="department_id" readonly="1"/>
                        <field name="employee_id" modifiers="{'readonly': [['state', '!=', 'draft']]}"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <group string="Requested Items">
                        <field name="line_ids" modifiers="{'readonly': [['state', '!=', 'draft']]}">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="product_uom_id" readonly="1"/>
                                <field name="warning_message" readonly="1" class="text-danger"/>
                            </tree>
                        </field>
                    </group>

                    <div>
                        <button name="action_submit_request"
                                string="Submit Request"
                                type="object"
                                class="btn-primary"
                                modifiers="{'invisible': [['state', '!=', 'draft']]}"/>           
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_department_item_request" model="ir.actions.act_window">
        <field name="name">Department Requests</field>
        <field name="res_model">department.item.request</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="domain">[('create_uid','=', uid)]</field>
    </record>

</odoo>
