<odoo>
  <record id="view_reorder_rule_tree" model="ir.ui.view">
    <field name="name">reorder.rule.tree</field>
    <field name="model">stock.reorder.rule</field>
    <field name="arch" type="xml">
      <tree>
        <field name="item_id"/>
        <field name="min_qty"/>
        <field name="max_qty"/>
      </tree>
    </field>
  </record>

  <record id="view_reorder_rule_form" model="ir.ui.view">
    <field name="name">reorder.rule.form</field>
    <field name="model">stock.reorder.rule</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="item_id"/>
          <field name="min_qty"/>
          <field name="max_qty"/>
        </group>
      </form>
    </field>
  </record>

  <record id="action_reorder_rule" model="ir.actions.act_window">
    <field name="name">Reorder Rules</field>
    <field name="res_model">stock.reorder.rule</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>